// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch-web",
			"isBackground": true,
			"problemMatcher": ["$ts-webpack-watch"],
			"presentation": {
				"reveal": "never"
			},
		},
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"background": {
				"activeOnStart": true,
				"beginPattern": ".*Built in [0-9]+.*",
				"endsPattern": ".*Build failed."
			},
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
